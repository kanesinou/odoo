<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflowable_position_list" model="ir.ui.view">
        <field name="name">workflowable.position.list</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <tree string="Workflowable Positions" create="0" edit="0">
                <field name="company_id" optional="hide"/>
                <field name="name"/>
                <field name="workflowable_id"/>
                <field name="workflow_process_id" />
                <field name="workflow_process_stage_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="view_workflowable_position_inline_list" model="ir.ui.view">
        <field name="name">workflowable.position.inline.list</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <tree string="Workflowable Positions" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="workflowable_id" optional="hide"/>
                <field name="name"/>
                <field name="workflow_process_id"/>
                <field name="workflow_process_stage_id"/>
                <field name="state" class="o_field_selection"/>
            </tree>
        </field>
    </record>
    <record id="view_workflowable_position_form" model="ir.ui.view">
        <field name="name">workflowable.position.form</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <form string="Workflowable Position" js_class="nxd_workflow_form" create="0" edit="0">
                <header>
                    <field name="process_buttons"/>
                    <field name="state" widget="statusbar" class="o_field_statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="workflowable_id" readonly="1"/>
                            <field name="workflow_process_stage_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="state" readonly="1"/>
                            <field name="workflow_process_id" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workflowable_position_search" model="ir.ui.view">
        <field name="name">workflowable.position.search</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <search string="Workflowable Positions">
                <field name="name" string="Name"/>
                <field name="state" string="State"/>
                <group expand="0" string="Group By">
                    <filter string="Workflowable" name="wkfbleposwble" domain="" context="{'group_by':'workflowable_id'}"/>
                    <filter string="Process" name="wkfbleposwkfprocss" domain="" context="{'group_by':'workflow_process_id'}"/>
                    <filter string="Stage" name="wkfbleposprocst" domain="" context="{'group_by':'workflow_process_stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_workflowable_position_kanban" model="ir.ui.view">
        <field name="name">workflowable.position.kanban</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="workflow_process_id" readonly="1"/>
                <field name="workflow_process_stage_id" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="workflow_process_stage_transition_id" readonly="1"/>
                <field name="state" readonly="1"/>
                <field name="is_returned" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.workflow_process_id.value">
                                    <span>Process : </span>
                                    <field name="workflow_process_id"/>
                                </div>
                                <div t-if="record.workflow_process_stage_id.value">
                                    <span>Stage : </span>
                                    <field name="workflow_process_stage_id"/>
                                </div>
                                <div t-if="record.workflow_process_stage_transition_id.value">
                                    <span>Stage Transition : </span>
                                    <field name="workflow_process_stage_transition_id"/>
                                </div>
                                <div t-if="record.state.value">
                                    <span>State : </span>
                                    <field name="state"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom mb-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span> Returned ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="is_returned"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>