<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_transition_list" model="ir.ui.view">
        <field name="name">workflow.transition.list</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <tree string="Workflow Transitions">
                <field name="company_id" optional="hide"/>
                <field name="root_workflow_id" optional="hide"/>
                <field name="context_type" optional="hide"/>
                <field name="workflow_id" optional="hide"/>
                <field name="workflow_transition_id" optional="hide"/>
                <field name="name"/>
                <field name="from_workflow_id"/>
                <field name="to_workflow_id"/>
                <field name="can_return" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_transition_form" model="ir.ui.view">
        <field name="name">workflow.transition.form</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <form string="Workflow Transition">
                <sheet>
                    <group>
                        <group>
                            <field name="workflow_id" domain="[('id', 'in', workflow_domain)]" attrs="{'readonly': [('workflow_transition_id', '!=', False)]}"/>
                            <field name="from_workflow_id" domain="['&amp;', ('is_ready', '=', True), ('id', 'in', from_workflow_domain)]"/>
                        </group>
                        <group>
                            <field name="workflow_transition_id" domain="[('id', 'in', workflow_transition_domain)]" attrs="{'readonly': [('workflow_id', '!=', False)]}"/>
                            <field name="to_workflow_id" domain="['&amp;', ('is_ready', '=', True), ('id', 'in', to_workflow_domain)]"/>
                        </group>
                    </group>
                    <field name="from_workflow_domain" invisible="1"/>
                    <field name="to_workflow_domain" invisible="1"/>
                    <field name="workflow_domain" invisible="1"/>
                    <field name="workflow_transition_domain" invisible="1"/>
                    <field name="root_workflow_id" invisible="1"/>
                    <field name="workflow_allowed" invisible="1"/>
                    <field name="workflow_transition_allowed" invisible="1"/>
                    <field name="stage_transitions_allowed" invisible="1"/>
                    <field name="workflow_transitions_allowed" invisible="1"/>
                    <field name="has_stage_transitions" invisible="1"/>
                    <field name="has_procedure_transitions" invisible="1"/>
                    <field name="has_sub_workflow_transitions" invisible="1"/>
                    <notebook>
                        <page id="workflow.transition.workflow_stage_transition_ids" name="Workflow Stage Transitions" attrs="{'invisible':[('stage_transitions_allowed', '=', False)]}">
                            <field name="workflow_stage_transition_ids"/>
                        </page>
                        <page id="workflow.transition.workflow_transition_ids" name="Workflow Transitions" attrs="{'invisible':[('workflow_transitions_allowed', '=', False)]}">
                            <field name="workflow_transition_ids"/>
                        </page>
                        <page id="workflow.transition.workflow_procedure_transition_ids" name="Workflow Procedure Transitions" attrs="{'invisible':[('has_procedure_transitions', '=', False)]}">
                            <field name="workflow_procedure_transition_ids"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_workflow_transition_inline_sibling_form" model="ir.ui.view">
        <field name="name">workflow.transition.inline.sibling.form</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <form string="Workflow Transition">
                <sheet>
                    <group>
                        <group>
                            <field name="from_workflow_id" domain="['&amp;', '&amp;', ('parent_id', '=', workflow_id), ('is_ready', '=', True), ('id', '!=', to_workflow_id)]"/>
                            <field name="workflow_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="to_workflow_id" domain="['&amp;', '&amp;', ('parent_id', '=', workflow_id), ('is_ready', '=', True), ('id', '!=', from_workflow_id)]"/>
                            <field name="can_return" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workflow_transition_search" model="ir.ui.view">
        <field name="name">workflow.transition.search</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <search string="Workflow Transitions">
                <field name="name" string="Name"/>
                <filter string="Workflow Context" name="wkf_workflow_context" domain="[('context_type', '=', 'sibling')]"/>
                <filter string="Workflow Transition Context" name="wkf_workflow_transition_context" domain="[('context_type', '=', 'transition')]"/>
                <group expand="0" string="Group By">
                    <filter string="Root Workflow" name="wkfsttrrootwkf" domain="" context="{'group_by':'root_workflow_id'}"/>
                    <filter string="Workflow" name="wkftrwkf" domain="" context="{'group_by':'workflow_id'}"/>
                    <filter string="Workflow Transition" name="wkftrwkftr" domain="" context="{'group_by':'workflow_transition_id'}"/>
                    <filter string="From Workflow" name="wkftrfromwkf" domain="" context="{'group_by':'from_workflow_id'}"/>
                    <filter string="To Workflow" name="wkftrtowkf" domain="" context="{'group_by':'to_workflow_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_workflow_transition_kanban" model="ir.ui.view">
        <field name="name">workflow.transition.kanban</field>
        <field name="model">workflow.transition</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="root_workflow_id" optional="hide" readonly="1"/>
                <field name="context_type" optional="hide" readonly="1"/>
                <field name="workflow_id" optional="hide" readonly="1"/>
                <field name="workflow_transition_id" optional="hide" readonly="1"/>
                <field name="from_workflow_id" optional="hide" readonly="1"/>
                <field name="to_workflow_id" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="can_return" widget="boolean_toggle" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.root_workflow_id.value">
                                    <span>Root : </span>
                                    <field name="root_workflow_id"/>
                                </div>
                                <div t-if="record.context_type.value">
                                    <span>Context Type : </span>
                                    <field name="context_type"/>
                                </div>
                                <div t-if="record.workflow_id.value">
                                    <span>Route Context : </span>
                                    <field name="workflow_id"/>
                                </div>
                                <div t-if="record.workflow_transition_id.value">
                                    <span>Transition Context : </span>
                                    <field name="workflow_transition_id"/>
                                </div>
                                <div t-if="record.from_workflow_id.value">
                                    <span>From Route : </span>
                                    <field name="from_workflow_id"/>
                                </div>
                                <div t-if="record.to_workflow_id.value">
                                    <span>To Route : </span>
                                    <field name="to_workflow_id"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span> Can Return ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="can_return"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>