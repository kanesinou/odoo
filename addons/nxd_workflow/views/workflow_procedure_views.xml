<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_procedure_list" model="ir.ui.view">
        <field name="name">workflow.procedure.list</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <tree string="Procedures">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="workflow_id" optional="hide" readonly="1"/>
                <field name="parent_id" optional="hide" readonly="1"/>
                <field name="starter_workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_stage_id" optional="hide" readonly="1"/>
                <field name="workflowable_type_id" readonly="1"/>
                <field name="base_procedure" widget="boolean_toggle" readonly="1"/>
                <field name="activity_procedure" widget="boolean_toggle" readonly="1"/>
                <field name="released" widget="boolean_toggle" readonly="1"/>
                <field name="codename" readonly="1"/>
                <field name="name" readonly="1"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_inline_list" model="ir.ui.view">
        <field name="name">workflow.procedure.inline.list</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <tree string="Procedures">
                <field name="company_id" optional="hide"/>
                <field name="workflow_id" optional="hide"/>
                <field name="starter_workflow_procedure_id" optional="hide"/>
                <field name="workflow_procedure_stage_id" optional="hide"/>
                <field name="workflowable_type_id"/>
                <field name="base_procedure" widget="boolean_toggle"/>
                <field name="activity_procedure" widget="boolean_toggle"/>
                <field name="codename"/>
                <field name="name"/>
                <field name="released" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_form" model="ir.ui.view">
        <field name="name">workflow.procedure.form</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <form string="Procedure">
                <header>
                    <button name="action_release_workflow_procedure"
                            string="Release" type="object" class="oe_highlight"
                            title="Release the workflow procedure"
                            context="{'target_state': 'draft'}"
                            attrs="{'invisible': ['|', ('released', '=', True), ('base_procedure', '=', False)]}"/>
                    <button name="action_configure_duration"
                            string="Configure Duration" type="object" class="oe_highlight"
                            title="Configure the workflow procedure duration"
                            attrs="{'invisible': ['&amp;', ('configured', '=', True), ('released', '=', True)]}"/>
                    <button name="action_unrelease_workflow_procedure"
                            string="Unrelease" type="object" class="oe_highlight"
                            title="Unrelease the workflow procedure"
                            attrs="{'invisible': ['|', ('released', '=', False), ('base_procedure', '=', False)]}"/>
                    <field name="state" widget="statusbar" class="o_field_statusbar"
                           attrs="{'invisible': ['&amp;', ('released', '=', True), ('starter_stage_allowed', '=', True)]}"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="codename"/>
                            <field name="workflow_id" domain="['&amp;', ('base_workflow', '=', True), ('is_ready', '=', True)]"/>
                            <field name="model_name" invisible="1"/>
                            <field name="is_default" readonly="1"/>
                            <field name="pass_on_changes" widget="boolean_toggle"/>
                            <field name="filter_domain" widget="domain"
                                   options="{'model': 'model_name', 'in_dialog': True}"/>
                            <field name="workflow_procedure_stage_id"
                                   attrs="{'invisible': [('starter_stage_allowed', '=', False)]}" readonly="1"/>
                            <field name="time_unit"/>
                            <field name="duration_range" readonly="1"/>
                            <field name="estimated_duration_range" readonly="1"/>
                            <field name="execution_duration_range" readonly="1"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="workflowable_type_id"/>
                            <field name="apply_workflow_changes" widget="boolean_toggle"/>
                            <field name="min_estimated_duration" readonly="1"/>
                            <field name="max_estimated_duration" readonly="1"/>
                            <field name="min_execution_duration" readonly="1"/>
                            <field name="max_execution_duration" readonly="1"/>
                            <field name="min_duration" readonly="1"/>
                            <field name="max_duration" readonly="1"/>
                        </group>
                        <field name="has_durations" invisible="1"/>
                        <field name="has_sub_procedures" invisible="1"/>
                        <field name="has_processes" invisible="1"/>
                        <field name="has_sub_transitions" invisible="1"/>
                        <field name="has_stages" invisible="1"/>
                        <field name="has_stage_transitions" invisible="1"/>
                        <field name="has_inbound_transitions" invisible="1"/>
                        <field name="has_outbound_transitions" invisible="1"/>
                        <field name="base_procedure" invisible="1"/>
                        <field name="parent_allowed" invisible="1"/>
                        <field name="children_allowed" invisible="1"/>
                        <field name="release_allowed" invisible="1"/>
                        <field name="starter_stage_allowed" invisible="1"/>
                        <field name="released" invisible="1"/>
                        <field name="configured" invisible="1"/>
                        <field name="root_workflow_procedure_id" invisible="1"/>
                    </group>
                    <notebook>
                        <page id="workflow.procedure.workflow_procedure_duration_ids"
                              name="Durations" create="0" edit="0"
                              attrs="{'invisible':[('has_durations', '=', False)]}">
                            <field name="workflow_procedure_duration_ids"/>
                        </page>
                        <page id="workflow.procedure.workflow_procedure_ids"
                              name="Sub Procedures" create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_sub_procedures', '=', False)]}">
                            <field name="workflow_procedure_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_procedure_inline_list', 'default_parent_id':id}"/>
                        </page>
                        <page id="workflow.procedure.workflow_procedure_transition_ids"
                              name="Sub Procedure Transitions" create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_sub_transitions', '=', False)]}">
                            <field name="workflow_procedure_transition_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_procedure_transition_inline_list'}"/>
                        </page>
                        <page id="workflow.procedure.workflow_procedure_stage_ids"
                              name="Stages" create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_stages', '=', False)]}">
                            <field name="workflow_procedure_stage_ids" readonly="1"/>
                        </page>
                        <page id="workflow.procedure.workflow_procedure_stage_transition_ids"
                              name="Stage Transitions" create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_stage_transitions', '=', False)]}">
                            <field name="workflow_procedure_stage_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.procedure.inbound_workflow_procedure_transition_ids"
                              name="Inbound Transitions"  create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_inbound_transitions', '=', False)]}">
                            <field name="inbound_workflow_procedure_transition_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_procedure_transition_inline_list'}"/>
                        </page>
                        <page id="workflow.procedure.outbound_workflow_procedure_transition_ids"
                              name="Outbound Transitions" create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_outbound_transitions', '=', False)]}">
                            <field name="outbound_workflow_procedure_transition_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_procedure_transition_inline_list'}"/>
                        </page>
                        <page id="workflow.procedure.workflow_process_ids"
                              name="Processes" create="0" edit="0" delete="0"
                              attrs="{'invisible':[('has_processes', '=', False)]}">
                            <field name="workflow_process_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workflow_procedure_search" model="ir.ui.view">
        <field name="name">workflow.procedure.search</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <search string="Procedures">
                <field name="codename" string="Codename"/>
                <field name="name" string="Name"/>
                <filter string="Base" name="base" domain="[('base_procedure', '=', True)]"/>
                <filter string="Sub Procedure" name="sub_procedure"
                        domain="['&amp;', ('base_procedure', '=', False), ('activity_procedure', '=', False)]"/>
                <filter string="Activity" name="activity" domain="[('activity_procedure', '=', True)]"/>
                <filter string="New" name="new" domain="[('state', '=', 'new')]"/>
                <filter string="Released" name="released" domain="[('state', '=', 'released')]"/>
                <filter string="Unreleased" name="unreleased" domain="[('state', '=', 'unreleased')]"/>
                <group expand="0" string="Group By">
                    <filter string="Workflowable Type" name="wkfwbletypewkfproc" domain="" context="{'group_by':'workflowable_type_id'}"/>
                    <filter string="Root Procedure" name="wkfrootwkfproc" domain="" context="{'group_by':'root_workflow_procedure_id'}"/>
                    <filter string="Parent Procedure" name="wkfparentwkfproc" domain="" context="{'group_by':'parent_id'}"/>
                    <filter string="Workflow" name="wkfwkfwkfproc" domain="" context="{'group_by':'workflow_id'}"/>
                    <filter string="Starter Sub Procedure" name="wkfsubprocwkfproc" domain="" context="{'group_by':'starter_workflow_procedure_id'}"/>
                    <filter string="State" name="wkfstatewkfproc" domain="" context="{'group_by':'state'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_workflow_procedure_kanban" model="ir.ui.view">
        <field name="name">workflow.procedure.kanban</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="root_workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="workflow_id" optional="hide" readonly="1"/>
                <field name="workflowable_type_id" optional="hide" readonly="1"/>
                <field name="parent_id" optional="hide" readonly="1"/>
                <field name="starter_workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_stage_id" optional="hide" readonly="1"/>
                <field name="base_procedure" widget="boolean_toggle" readonly="1"/>
                <field name="activity_procedure" widget="boolean_toggle" readonly="1"/>
                <field name="codename" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="can_be_cancelled" widget="boolean_toggle" readonly="1"/>
                <field name="can_be_breaked" widget="boolean_toggle" readonly="1"/>
                <field name="can_be_resumed" widget="boolean_toggle" readonly="1"/>
                <field name="released" widget="boolean_toggle" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>(<span><field name="codename"/></span>)
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.workflow_id.value">
                                    <span>Route : </span>
                                    <field name="workflow_id"/>
                                </div>
                                <div t-if="record.workflowable_type_id.value">
                                    <span>Model : </span>
                                    <field name="workflowable_type_id"/>
                                </div>
                                <div t-if="record.starter_workflow_procedure_id.value">
                                    <span>Starter Procedure : </span>
                                    <field name="starter_workflow_procedure_id"/>
                                </div>
                                <div t-if="record.workflow_procedure_stage_id.value">
                                    <span>Starter Stage : </span>
                                    <field name="workflow_procedure_stage_id"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom mb-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span> Base ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="base_procedure"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                        <span> Activity ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="activity_procedure"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span> Released ? </span>
                                        <span class="o_kanban_record_subtitle ms-2">
                                            <field name="released"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>