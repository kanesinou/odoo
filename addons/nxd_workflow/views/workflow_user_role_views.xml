<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_user_role_list" model="ir.ui.view">
        <field name="name">workflow.user.role.list</field>
        <field name="model">workflow.user.role</field>
        <field name="arch" type="xml">
            <tree string="User Roles">
                <field name="company_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_user_role_form" model="ir.ui.view">
        <field name="name">workflow.user.role.form</field>
        <field name="model">workflow.user.role</field>
        <field name="arch" type="xml">
            <form string="User Role">
                <sheet>
                    <group>
                        <group>
                            <field name="res_groups_id" />
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="full_name" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_user_role_kanban" model="ir.ui.view">
        <field name="name">workflow.user.role.kanban</field>
        <field name="model">workflow.user.role</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="full_name" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.full_name.value">
                                    <span>Full Name : </span>
                                    <field name="full_name"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>