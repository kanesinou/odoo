<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_user_list" model="ir.ui.view">
        <field name="name">workflow.user.list</field>
        <field name="model">workflow.user</field>
        <field name="arch" type="xml">
            <tree string="Users">
                <field name="company_id"/>
                <field name="name"/>
                <field name="email"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_user_form" model="ir.ui.view">
        <field name="name">workflow.user.form</field>
        <field name="model">workflow.user</field>
        <field name="arch" type="xml">
            <form string="User">
                <sheet>
                    <group>
                        <group>
                            <field name="res_users_id"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="email" readonly="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_user_kanban" model="ir.ui.view">
        <field name="name">workflow.user.kanban</field>
        <field name="model">workflow.user</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="email" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span><span t-if="record.email.value"> (<field name="email"/>) </span>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>