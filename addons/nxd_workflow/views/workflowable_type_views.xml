<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflowable_type_list" model="ir.ui.view">
        <field name="name">workflowable.type.list</field>
        <field name="model">workflowable.type</field>
        <field name="arch" type="xml">
            <tree string="Workflowable Types">
                <field name="company_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_workflowable_type_form" model="ir.ui.view">
        <field name="name">workflowable.type.form</field>
        <field name="model">workflowable.type</field>
        <field name="arch" type="xml">
            <form string="Workflowable Type">
                <sheet>
                    <group>
                        <group>
                            <field name="model_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflowable_type_kanban" model="ir.ui.view">
        <field name="name">workflowable.type.kanban</field>
        <field name="model">workflowable.type</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>
                                </h4>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>