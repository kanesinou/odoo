<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_procedure_stage_transition_list" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.transition.list</field>
        <field name="model">workflow.procedure.stage.transition</field>
        <field name="arch" type="xml">
            <tree string="Procedure Stage Transitions">
                <field name="company_id" optional="hide"/>
                <field name="workflow_stage_transition_id" optional="hide"/>
                <field name="workflow_procedure_id" optional="hide"/>
                <field name="workflow_procedure_transition_id" optional="hide"/>
                <field name="from_workflow_procedure_stage_id"/>
                <field name="to_workflow_procedure_stage_id"/>
                <field name="name"/>
                <field name="can_return" widget="boolean_toggle"/>
                <field name="return_action_name" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_stage_transition_inline_list" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.transition.inline.list</field>
        <field name="model">workflow.procedure.stage.transition</field>
        <field name="arch" type="xml">
            <tree string="Procedure Stage Transitions">
                <field name="company_id" optional="hide"/>
                <field name="workflow_stage_transition_id" optional="hide"/>
                <field name="from_workflow_procedure_stage_id"/>
                <field name="to_workflow_procedure_stage_id"/>
                <field name="name"/>
                <field name="can_return" widget="boolean_toggle"/>
                <field name="return_action_name" optional="hide"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_stage_transition_form" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.transition.form</field>
        <field name="model">workflow.procedure.stage.transition</field>
        <field name="arch" type="xml">
            <form string="Procedure Stage Transition">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="from_workflow_procedure_stage_id" readonly="1"/>
                            <field name="workflow_procedure_id" readonly="1"
                                   attrs="{'invisible': [('context_type', '!=', 'sibling')]}"/>
                            <field name="can_return" widget="boolean_toggle"/>
                        </group>
                        <group>
                            <field name="workflow_stage_transition_id" readonly="1"/>
                            <field name="to_workflow_procedure_stage_id" readonly="1"/>
                            <field name="workflow_procedure_transition_id" readonly="1"
                                   attrs="{'invisible': [('context_type', '!=', 'transition')]}"/>
                            <field name="return_action_name" attrs="{'invisible': [('can_return', '=', False)]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.procedure.stage.transition.workflow_process_stage_transition_ids" name="Process Stage Transitions"
                              attrs="{'invisible': [('has_process_stage_transitions', '=', False)]}">
                            <field name="workflow_process_stage_transition_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="context_type" invisible="1"/>
                    <field name="has_process_stage_transitions" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workflow_procedure_stage_transition_search" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.transition.search</field>
        <field name="model">workflow.procedure.stage.transition</field>
        <field name="arch" type="xml">
            <search string="Procedure Stage Transitions">
                <field name="name" string="Name"/>
                <field name="return_action_name" string="Return Action Name"/>
                <filter string="Passage" name="stt_passage" domain="[('context_type', '=', 'sibling')]"/>
                <filter string="Bridge" name="stt_bridge" domain="[('context_type', '=', 'transition')]"/>
                <group expand="0" string="Group By">
                    <filter string="Root Procedure" name="wkfsttransrootwkfproc" domain="" context="{'group_by':'root_workflow_procedure_id'}"/>
                    <filter string="Procedure Transition" name="wkfsttranswkfproct" domain="" context="{'group_by':'workflow_procedure_transition_id'}"/>
                    <filter string="Context Procedure" name="wkfsttranswkfproc" domain="" context="{'group_by':'workflow_procedure_id'}"/>
                    <filter string="Context Procedure Transition" name="wkfsttranswkfproctrans" domain="" context="{'group_by':'workflow_procedure_transition_id'}"/>
                    <filter string="Source Stage" name="wkfsttransfromwkfproc" domain="" context="{'group_by':'from_workflow_procedure_stage_id'}"/>
                    <filter string="Destination Stage" name="wkfsttranstowkfproc" domain="" context="{'group_by':'to_workflow_procedure_stage_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_workflow_procedure_stage_transition_kanban" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.transition.kanban</field>
        <field name="model">workflow.procedure.stage.transition</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="root_workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="context_type" optional="hide" readonly="1"/>
                <field name="from_workflow_procedure_stage_id" optional="hide" readonly="1"/>
                <field name="to_workflow_procedure_stage_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_transition_id" optional="hide" readonly="1"/>
                <field name="workflow_stage_transition_id" optional="hide" readonly="1"/>
                <field name="action_name" readonly="1"/>
                <field name="return_action_name" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="can_return" widget="boolean_toggle" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.workflow_procedure_id.value">
                                    <span>Procedure : </span>
                                    <field name="workflow_procedure_id"/>
                                </div>
                                <div t-if="record.workflow_procedure_transition_id.value">
                                    <span>Procedure Transition : </span>
                                    <field name="workflow_procedure_transition_id"/>
                                </div>
                                <div t-if="record.workflow_stage_transition_id.value">
                                    <span>Route Stage Transition : </span>
                                    <field name="workflow_stage_transition_id"/>
                                </div>
                                <div t-if="record.context_type.value">
                                    <span>Context Type : </span>
                                    <field name="context_type"/>
                                </div>
                                <div t-if="record.from_workflow_procedure_stage_id.value">
                                    <span>From Stage : </span>
                                    <field name="from_workflow_procedure_stage_id"/>
                                </div>
                                <div t-if="record.to_workflow_procedure_stage_id.value">
                                    <span>To Stage : </span>
                                    <field name="to_workflow_procedure_stage_id"/>
                                </div>
                                <div t-if="record.action_name.value">
                                    <span>Action Name : </span>
                                    <field name="action_name"/>
                                </div>
                                <div t-if="record.return_action_name.value">
                                    <span>Return Action Name : </span>
                                    <field name="return_action_name"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <span> Can Return ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="can_return"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>