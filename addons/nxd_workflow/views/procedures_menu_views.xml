<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflowable_type_list" model="ir.ui.view">
        <field name="name">workflowable.type.list</field>
        <field name="model">workflowable.type</field>
        <field name="arch" type="xml">
            <tree string="Workflowable Types">
                <field name="company_id" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_workflowable_type_form" model="ir.ui.view">
        <field name="name">workflowable.type.form</field>
        <field name="model">workflowable.type</field>
        <field name="arch" type="xml">
            <form string="Workflowable Type">
                <sheet>
                    <group>
                        <group>
                            <field name="model_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_procedure_list" model="ir.ui.view">
        <field name="name">workflow.procedure.list</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <tree string="Procedures">
                <field name="company_id" />
                <field name="workflow_id" />
                <field name="workflowable_type_id" />
                <field name="workflow_procedure_stage_id" />
                <field name="parent_id" />
                <field name="base_procedure" widget="boolean_toggle" />
                <field name="activity_procedure" widget="boolean_toggle" />
                <field name="released" widget="boolean_toggle" />
                <field name="codename" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_form" model="ir.ui.view">
        <field name="name">workflow.procedure.form</field>
        <field name="model">workflow.procedure</field>
        <field name="arch" type="xml">
            <form string="Procedure">
                <header>
                    <button name="action_release_workflow_procedure"
                            string="Release" type="object" class="oe_highlight"
                            title="Release the workflow procedure"
                            attrs="{'invisible': ['&amp;', ('released', '=', True), ('starter_stage_allowed', '=', True)]}" />
                    <button name="action_configure_workflow_procedure"
                            string="Start Configuration" type="object" class="oe_highlight"
                            title="Configure the workflow procedure"
                            attrs="{'invisible': [('configured', '=', True)]}" />
                    <button name="action_unrelease_workflow_procedure"
                            string="Unrelease" type="object" class="oe_highlight"
                            title="Unrelease the workflow procedure"
                            attrs="{'invisible': ['|', ('released', '=', False), ('starter_stage_allowed', '=', True)]}" />
                    <field name="state" widget="statusbar" class="o_field_statusbar"
                           attrs="{'invisible': ['&amp;', ('released', '=', True), ('starter_stage_allowed', '=', True)]}" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="workflow_id" domain="[('base_workflow', '=', True)]" />
                            <field name="workflowable_type_id" />
                            <field name="workflow_procedure_stage_id"
                                   attrs="{'invisible': [('starter_stage_allowed', '=', False)]}" />
                        </group>
                        <group>
                            <field name="codename" />
                            <field name="name" />
                        </group>
                        <field name="parent_allowed" invisible="1" />
                        <field name="children_allowed" invisible="1" />
                        <field name="release_allowed" invisible="1" />
                        <field name="starter_stage_allowed" invisible="1" />
                        <field name="released" invisible="1" />
                        <field name="configured" invisible="1" />
                        <field name="root_workflow_procedure_id" invisible="1" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_procedure_stage_list" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.list</field>
        <field name="model">workflow.procedure.stage</field>
        <field name="arch" type="xml">
            <tree string="Procedure Stages">
                <field name="company_id" />
                <field name="workflow_stage_id" />
                <field name="workflow_procedure_id" />
                <field name="codename" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_workflow_procedure_cycle_list" model="ir.ui.view">
        <field name="name">workflow.procedure.cycle.list</field>
        <field name="model">workflow.procedure.cycle</field>
        <field name="arch" type="xml">
            <tree string="Procedure Cycles">
                <field name="company_id" />
                <field name="codename" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_cycle_form" model="ir.ui.view">
        <field name="name">workflow.procedure.cycle.form</field>
        <field name="model">workflow.procedure.cycle</field>
        <field name="arch" type="xml">
            <form string="Procedure Cycle">
                <sheet>
                    <group>
                        <group>
                            <field name="codename" />
                        </group>
                        <group>
                            <field name="name" />
                        </group>
                        <field name="procedure_transitions_allowed" invisible="1" />
                    </group>
                    <notebook>
                        <page name="Workflow Procedures">
                            <group>
                                <field name="workflow_procedure_ids" />
                            </group>
                        </page>
                        <page name="Procedure Transitions" attrs="{'invisible':[('procedure_transitions_allowed', '=', False)]}">
                            <group>
                                <field name="workflow_procedure_transition_ids" />
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_procedure_transition_list" model="ir.ui.view">
        <field name="name">workflow.procedure.transition.list</field>
        <field name="model">workflow.procedure.transition</field>
        <field name="arch" type="xml">
            <tree string="Procedure Transitions">
                <field name="company_id" />
                <field name="workflow_transition_id" />
                <field name="workflow_procedure_id" />
                <field name="from_workflow_procedure_id" />
                <field name="to_workflow_procedure_id" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_workflow_procedure_stage_transition_list" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.transition.list</field>
        <field name="model">workflow.procedure.stage.transition</field>
        <field name="arch" type="xml">
            <tree string="Procedure Stage Transitions">
                <field name="company_id" />
                <field name="workflow_stage_transition_id" />
                <field name="workflow_procedure_id" />
                <field name="workflow_procedure_transition_id" />
                <field name="from_workflow_procedure_stage_id" />
                <field name="to_workflow_procedure_stage_id" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_workflow_procedure_execution_list" model="ir.ui.view">
        <field name="name">workflow.procedure.execution.list</field>
        <field name="model">workflow.procedure.execution</field>
        <field name="arch" type="xml">
            <tree string="Procedure Executions">
                <field name="company_id" />
                <field name="workflow_procedure_stage_id" />
                <field name="workflow_job_id" />
                <field name="workflow_user_id" />
                <field name="workflow_user_role_id" />
                <field name="mandatory" />
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_workflow_user_list" model="ir.ui.view">
        <field name="name">workflow.user.list</field>
        <field name="model">workflow.user</field>
        <field name="arch" type="xml">
            <tree string="Users">
                <field name="company_id" />
                <field name="name" />
                <field name="email" />
            </tree>
        </field>
    </record>
    <record id="view_workflow_user_form" model="ir.ui.view">
        <field name="name">workflow.user.form</field>
        <field name="model">workflow.user</field>
        <field name="arch" type="xml">
            <form string="User">
                <sheet>
                    <group>
                        <group>
                            <field name="res_users_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_user_role_list" model="ir.ui.view">
        <field name="name">workflow.user.role.list</field>
        <field name="model">workflow.user.role</field>
        <field name="arch" type="xml">
            <tree string="User Roles">
                <field name="company_id" />
                <field name="name" />
            </tree>
        </field>
    </record>
    <record id="view_workflow_user_role_form" model="ir.ui.view">
        <field name="name">workflow.user.role.form</field>
        <field name="model">workflow.user.role</field>
        <field name="arch" type="xml">
            <form string="User Role">
                <sheet>
                    <group>
                        <group>
                            <field name="res_groups_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_procedure_collision_list" model="ir.ui.view">
        <field name="name">workflow.procedure.collision.list</field>
        <field name="model">workflow.procedure.collision</field>
        <field name="arch" type="xml">
            <tree string="Procedure Collisions">
                <field name="company_id" />
                <field name="workflow_procedure_id" />
                <field name="workflow_user_id" />
                <field name="workflow_user_role_id" />
                <field name="name" />
            </tree>
        </field>
    </record>
</odoo>