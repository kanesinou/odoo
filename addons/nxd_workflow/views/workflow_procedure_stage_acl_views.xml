<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_procedure_stage_acl_list" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.acl.list</field>
        <field name="model">workflow.procedure.stage.acl</field>
        <field name="arch" type="xml">
            <tree string="Procedure Stage Access Control Lists">
                <field name="company_id" optional="hide"/>
                <field name="root_workflow_procedure_id" optional="hide"/>
                <field name="workflow_procedure_stage_id"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_procedure_stage_acl_form" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.acl.form</field>
        <field name="model">workflow.procedure.stage.acl</field>
        <field name="arch" type="xml">
            <form string="Procedure Stage Access Control List">
                <sheet>
                    <group>
                        <group>
                            <field name="workflow_procedure_stage_id"/>
                        </group>
                        <group>
                            <field name="model_name" invisible="1"/>
                            <field name="filter_domain" widget="domain" options="{'model': 'model_name', 'in_dialog': True}"/>
                        </group>
                        <field name="access_users_count" invisible="1"/>
                        <field name="access_roles_count" invisible="1"/>
                        <field name="is_user_protected" invisible="1"/>
                        <field name="is_role_protected" invisible="1"/>
                    </group>
                    <notebook>
                        <page id="workflow.procedure.stage.acl.access_workflow_user_ids" name="Access Granted Users">
                            <field name="access_workflow_user_ids"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.access_workflow_role_ids" name="Access Granted Roles">
                            <field name="access_workflow_role_ids"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.cancel_workflow_user_ids" name="Cancel Granted Users" attrs="{'invisible': [('is_user_protected', '=', False)]}">
                            <field name="cancel_workflow_user_ids"
                                   context="{'form_view_ref': 'nxd_workflow.view_workflow_user_form'}"
                                   domain="[('id', 'in', access_workflow_user_ids)]"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.cancel_workflow_role_ids" name="Cancel Granted Roles" attrs="{'invisible': [('is_role_protected', '=', False)]}">
                            <field name="cancel_workflow_role_ids"
                                   context="{'form_view_ref': 'nxd_workflow.view_workflow_user_role_form'}"
                                   domain="[('id', 'in', access_workflow_role_ids)]"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.break_workflow_user_ids" name="Break Granted Users" attrs="{'invisible': [('is_user_protected', '=', False)]}">
                            <field name="break_workflow_user_ids"
                                   context="{'form_view_ref': 'nxd_workflow.view_workflow_user_form'}"
                                   domain="[('id', 'in', access_workflow_user_ids)]"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.break_workflow_role_ids" name="Break Granted Roles" attrs="{'invisible': [('is_role_protected', '=', False)]}">
                            <field name="break_workflow_role_ids"
                                   context="{'form_view_ref': 'nxd_workflow.view_workflow_user_role_form'}"
                                   domain="[('id', 'in', access_workflow_role_ids)]"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.resume_workflow_user_ids" name="Resume Granted Users" attrs="{'invisible': [('is_user_protected', '=', False)]}">
                            <field name="resume_workflow_user_ids"
                                   context="{'form_view_ref': 'nxd_workflow.view_workflow_user_form'}"
                                   domain="[('id', 'in', access_workflow_user_ids)]"/>
                        </page>
                        <page id="workflow.procedure.stage.acl.resume_workflow_role_ids" name="Resume Granted Roles" attrs="{'invisible': [('is_role_protected', '=', False)]}">
                            <field name="resume_workflow_role_ids"
                                   context="{'form_view_ref': 'nxd_workflow.view_workflow_user_role_form'}"
                                   domain="[('id', 'in', access_workflow_role_ids)]"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_procedure_stage_acl_kanban" model="ir.ui.view">
        <field name="name">workflow.procedure.stage.acl.kanban</field>
        <field name="model">workflow.procedure.stage.acl</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_stage_id" optional="hide" readonly="1"/>
                <field name="model_name" optional="hide" readonly="1"/>
                <field name="name" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.workflow_procedure_stage_id.value">
                                    <span>Stage : </span>
                                    <field name="workflow_procedure_stage_id"/>
                                </div>
                                <div t-if="record.model_name.value">
                                    <span>Model : </span>
                                    <field name="model_name"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
