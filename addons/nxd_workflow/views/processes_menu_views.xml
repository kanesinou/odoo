<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_process_list" model="ir.ui.view">
        <field name="name">workflow.process.list</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <tree string="Processes" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="workflow_procedure_id" optional="hide"/>
                <field name="parent_id" optional="hide"/>
                <field name="codename" optional="hide"/>
                <field name="name"/>
                <field name="workflowable_id"/>
                <field name="base_process" widget="boolean_toggle"/>
                <field name="activity_process" widget="boolean_toggle"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_form" model="ir.ui.view">
        <field name="name">workflow.process.form</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <form string="Process" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="codename" readonly="1"/>
                            <field name="base_process" widget="boolean_toggle" readonly="1"/>
                            <field name="start_datetime" readonly="1"/>
                            <field name="workflow_procedure_id" readonly="1"/>
                            <field name="root_workflow_process_id" readonly="1"/>
                            <field name="starter_workflow_process_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="activity_process" widget="boolean_toggle" readonly="1"/>
                            <field name="end_datetime" readonly="1"/>
                            <field name="parent_id" readonly="1"/>
                            <field name="workflowable_id" readonly="1"/>
                            <field name="workflow_process_stage_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.process.workflow_process_ids" name="Sub Processes"
                              attrs="{'invisible': [('has_sub_processes', '=', False)]}">
                            <field name="workflow_process_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_process_list', 'default_parent_id':id}" />
                        </page>
                        <page id="workflow.process.workflow_process_transition_ids" name="Sub Process Transitions"
                              attrs="{'invisible': [('has_sub_process_transitions', '=', False)]}">
                            <field name="workflow_process_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.workflow_process_duration_ids" name="Durations"
                              attrs="{'invisible': [('has_durations', '=', False)]}">
                            <field name="workflow_process_duration_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.workflow_process_stage_ids" name="Process Stages"
                              attrs="{'invisible': [('has_process_stages', '=', False)]}">
                            <field name="workflow_process_stage_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.workflow_process_stage_transition_ids" name="Process Stage Transitions"
                              attrs="{'invisible': [('has_process_stage_transitions', '=', False)]}">
                            <field name="workflow_process_stage_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.inbound_workflow_process_transition_ids" name="Inbound Transitions"
                              attrs="{'invisible': [('has_inbound_transitions', '=', False)]}">
                            <field name="inbound_workflow_process_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.outbound_workflow_process_transition_ids" name="Outbound Transitions"
                              attrs="{'invisible': [('has_outbound_transitions', '=', False)]}">
                            <field name="outbound_workflow_process_transition_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="parent_allowed" invisible="1"/>
                    <field name="has_sub_processes" invisible="1"/>
                    <field name="has_durations" invisible="1"/>
                    <field name="has_sub_process_transitions" invisible="1"/>
                    <field name="has_process_stages" invisible="1"/>
                    <field name="has_process_stage_transitions" invisible="1"/>
                    <field name="has_inbound_transitions" invisible="1"/>
                    <field name="has_outbound_transitions" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_process_stage_list" model="ir.ui.view">
        <field name="name">workflow.process.stage.list</field>
        <field name="model">workflow.process.stage</field>
        <field name="arch" type="xml">
            <tree string="Process Stages" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="root_workflow_process_id" optional="hide"/>
                <field name="workflow_procedure_stage_id" optional="hide"/>
                <field name="workflow_process_execution_id" optional="hide"/>
                <field name="codename" optional="hide"/>
                <field name="name"/>
                <field name="workflow_process_id"/>
                <field name="aborted" widget="boolean_toggle"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
                <field name="workflow_state_id"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_stage_form" model="ir.ui.view">
        <field name="name">workflow.process.stage.form</field>
        <field name="model">workflow.process.stage</field>
        <field name="arch" type="xml">
            <form string="Process Stage" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="codename" readonly="1"/>
                            <field name="start_datetime" readonly="1"/>
                            <field name="aborted" widget="boolean_toggle" readonly="1"/>
                            <field name="root_workflow_process_id" readonly="1"/>
                            <field name="workflow_procedure_stage_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="end_datetime" readonly="1"/>
                            <field name="workflow_process_execution_id" readonly="1"/>
                            <field name="workflow_process_id" readonly="1"/>
                            <field name="workflow_state_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.process.stage.workflow_process_stage_duration_ids" name="Durations"
                              attrs="{'invisible': [('has_durations', '=', False)]}">
                            <field name="workflow_process_stage_duration_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.stage.workflow_process_ids" name="Started Processes"
                              attrs="{'invisible': [('has_started_processes', '=', False)]}">
                            <field name="workflow_process_ids" readonly="1"
                                   domain="['&amp;', ('root_workflow_process_id', '=', root_workflow_process_id), ('workflowable_id', '=', 'workflow_process_id.workflowable_id.id')]"/>
                        </page>
                        <page id="workflow.process.stage.workflow_process_execution_ids" name="Executions"
                              attrs="{'invisible': [('has_executions', '=', False)]}">
                            <field name="workflow_process_execution_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.stage.inbound_workflow_process_stage_transition_ids" name="Inbound Transitions"
                              attrs="{'invisible': [('has_inbound_transitions', '=', False)]}">
                            <field name="inbound_workflow_process_stage_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.stage.outbound_workflow_process_stage_transition_ids" name="Outbound Transitions"
                              attrs="{'invisible': [('has_outbound_transitions', '=', False)]}">
                            <field name="outbound_workflow_process_stage_transition_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="root_workflow_process_id" invisible="1"/>
                    <field name="has_durations" invisible="1"/>
                    <field name="has_started_processes" invisible="1"/>
                    <field name="has_executions" invisible="1"/>
                    <field name="has_inbound_transitions" invisible="1"/>
                    <field name="has_outbound_transitions" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_process_cycle_list" model="ir.ui.view">
        <field name="name">workflow.process.cycle.list</field>
        <field name="model">workflow.process.cycle</field>
        <field name="arch" type="xml">
            <tree string="Process Cycles" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="codename" optional="hide"/>
                <field name="workflow_procedure_cycle_id"/>
                <field name="name"/>
                <field name="start_datetime"/>
                <field name="end_datetime"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_cycle_form" model="ir.ui.view">
        <field name="name">workflow.process.cycle.form</field>
        <field name="model">workflow.process.cycle</field>
        <field name="arch" type="xml">
            <form string="Process Cycle" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="codename" readonly="1"/>
                            <field name="start_datetime" readonly="1"/>
                            <field name="workflow_procedure_cycle_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="end_datetime" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.process.cycle.workflow_process_cycle_duration_ids" name="Durations"
                              attrs="{'invisible': [('has_durations', '=', False)]}">
                            <field name="workflow_process_cycle_duration_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.cycle.workflow_process_ids" name="Processes"
                              attrs="{'invisible': [('has_processes', '=', False)]}">
                            <field name="workflow_process_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.cycle.workflow_process_transition_ids" name="Process Transitions"
                              attrs="{'invisible': [('has_process_transitions', '=', False)]}">
                            <field name="workflow_process_transition_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="has_durations" invisible="1"/>
                    <field name="has_processes" invisible="1"/>
                    <field name="has_process_transitions" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_process_transition_list" model="ir.ui.view">
        <field name="name">workflow.process.transition.list</field>
        <field name="model">workflow.process.transition</field>
        <field name="arch" type="xml">
            <tree string="Process Transitions" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="workflow_procedure_transition_id" optional="hide"/>
                <field name="root_workflow_process_id" optional="hide"/>
                <field name="workflow_process_id" optional="hide"/>
                <field name="workflow_process_transition_id" optional="hide"/>
                <field name="name"/>
                <field name="from_workflow_process_id"/>
                <field name="to_workflow_process_id"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_transition_form" model="ir.ui.view">
        <field name="name">workflow.process.transition.form</field>
        <field name="model">workflow.process.transition</field>
        <field name="arch" type="xml">
            <form string="Process Transition" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="from_workflow_process_id" readonly="1"/>
                            <field name="workflow_procedure_transition_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="workflow_process_id" readonly="1"
                                   attrs="{'invisible': [('context_type', '!=', 'sibling')]}"/>
                            <field name="workflow_process_transition_id" readonly="1"
                                   attrs="{'invisible': [('context_type', '!=', 'transition')]}"/>
                            <field name="to_workflow_process_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.process.transition.workflow_process_stage_transition_ids" name="Stage Transitions"
                              attrs="{'invisible': [('has_stage_transitions', '=', False)]}">
                            <field name="workflow_process_stage_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.transition.workflow_process_transition_ids" name="Process Transitions"
                              attrs="{'invisible': [('has_process_transitions', '=', False)]}">
                            <field name="workflow_process_transition_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="context_type" invisible="1"/>
                    <field name="has_stage_transitions" invisible="1"/>
                    <field name="has_process_transitions" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_process_stage_transition_list" model="ir.ui.view">
        <field name="name">workflow.process.stage.transition.list</field>
        <field name="model">workflow.process.stage.transition</field>
        <field name="arch" type="xml">
            <tree string="Process Stage Transitions" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="workflow_procedure_stage_transition_id" optional="hide"/>
                <field name="root_workflow_process_id" optional="hide"/>
                <field name="workflow_process_id" optional="hide"/>
                <field name="workflow_process_transition_id" optional="hide"/>
                <field name="name"/>
                <field name="from_workflow_process_stage_id"/>
                <field name="to_workflow_process_stage_id"/>
                <field name="transition_datetime"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_stage_transition_form" model="ir.ui.view">
        <field name="name">workflow.process.stage.transition.form</field>
        <field name="model">workflow.process.stage.transition</field>
        <field name="arch" type="xml">
            <form string="Process Stage Transition" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="from_workflow_process_stage_id" readonly="1"/>
                            <field name="workflow_procedure_stage_transition_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="workflow_process_id" readonly="1"
                                   attrs="{'invisible': [('context_type', '!=', 'sibling')]}"/>
                            <field name="workflow_process_transition_id" readonly="1"
                                   attrs="{'invisible': [('context_type', '!=', 'transition')]}"/>
                            <field name="to_workflow_process_stage_id" readonly="1"/>
                            <field name="transition_datetime" readonly="1"/>
                        </group>
                    </group>
                    <field name="context_type" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflow_process_execution_list" model="ir.ui.view">
        <field name="name">workflow.process.execution.list</field>
        <field name="model">workflow.process.execution</field>
        <field name="arch" type="xml">
            <tree string="Process Executions" create="0" edit="0" delete="0">
                <field name="company_id" optional="hide"/>
                <field name="workflow_procedure_execution_id" optional="hide"/>
                <field name="root_workflow_process_id" optional="hide"/>
                <field name="mandatory" widget="boolean_toggle" optional="hide"/>
                <field name="workflow_user_role_id" optional="hide"/>
                <field name="workflow_process_stage_id"/>
                <field name="workflow_job_id"/>
                <field name="workflow_action_id"/>
                <field name="workflow_user_id"/>
                <field name="execution_datetime"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_execution_form" model="ir.ui.view">
        <field name="name">workflow.process.execution.form</field>
        <field name="model">workflow.process.execution</field>
        <field name="arch" type="xml">
            <form string="Process Execution" create="0" edit="0" delete="0">
                <sheet>
                    <group>
                        <group>
                            <field name="mandatory" widget="boolean_toggle" readonly="1"/>
                            <field name="workflow_process_stage_id" readonly="1"/>
                            <field name="workflow_action_id" readonly="1"/>
                            <field name="root_workflow_process_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="execution_datetime" readonly="1"/>
                            <field name="workflow_job_id" readonly="1"/>
                            <field name="workflow_user_id" readonly="1"/>
                            <field name="workflow_user_role_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.process.execution.workflow_process_stage_ids" name="Aborted Stages"
                              attrs="{'invisible': [('has_aborted_process_stages', '=', False)]}">
                            <field name="workflow_process_stage_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="has_aborted_process_stages" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflowable_list" model="ir.ui.view">
        <field name="name">workflowable.list</field>
        <field name="model">workflowable</field>
        <field name="arch" type="xml">
            <tree string="Workflowables" create="0" edit="0" delete="0"
                  action="workflowable_active_form_action">
                <field name="company_id"/>
                <field name="model"/>
                <field name="name"/>
                <field name="id" invisible="1"/>
                <field name="workflowable_position_ids" invisible="1"/>
            </tree>
        </field>
    </record>
    <record id="view_workflowable_main_form" model="ir.ui.view">
        <field name="name">workflowable.form</field>
        <field name="model">workflowable</field>
        <field name="arch" type="xml">
            <form string="Workflowable">
                <header>
                    <div class="oe_left">
                        <field name="displayed_workflow_process_id"/>
                    </div>
                    <field name="displayed_workflow_processbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="workflow_process_ids" invisible="1"/>
                            <field name="model" readonly="1"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflowable.position_ids" name="Positions">
                            <field name="workflowable_position_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflowable_position_inline_list', 'default_workflowable_id': active_id}"/>
                        </page>
                        <page id="workflowable.process_ids" name="Processes">
                            <field name="workflow_process_ids" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_workflowable_position_list" model="ir.ui.view">
        <field name="name">workflowable.position.list</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <tree string="Workflowable Positions">
                <field name="company_id" />
                <field name="workflowable_id" />
                <field name="workflow_process_id" />
                <field name="workflow_process_stage_id" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="view_workflowable_position_inline_list" model="ir.ui.view">
        <field name="name">workflowable.position.inline.list</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <tree string="Workflowable Positions">
                <field name="workflowable_id" invisible="1"/>
                <field name="workflow_process_id"/>
                <field name="workflow_process_stage_id"/>
                <field name="state" class="o_field_selection"/>
            </tree>
        </field>
    </record>
    <record id="view_workflowable_position_form" model="ir.ui.view">
        <field name="name">workflowable.position.form</field>
        <field name="model">workflowable.position</field>
        <field name="arch" type="xml">
            <form string="Workflowable Position" create="0" delete="0">
                <header>
                    <field name="state" widget="statusbar" class="o_field_statusbar" />
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="workflowable_id" />
                            <field name="state" />
                        </group>
                        <group>
                            <field name="workflow_process_stage_id" />
                            <field name="workflow_process_id" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>