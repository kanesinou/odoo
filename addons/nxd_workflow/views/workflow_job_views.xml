<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_job_list" model="ir.ui.view">
        <field name="name">workflow.job.list</field>
        <field name="model">workflow.job</field>
        <field name="arch" type="xml">
            <tree string="Jobs">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="root_workflow_job_id" optional="hide" readonly="1"/>
                <field name="parent_id" readonly="1"/>
                <field name="is_task" widget="boolean_toggle" readonly="1"/>
                <field name="codename" readonly="1"/>
                <field name="name" readonly="1"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_job_inline_list" model="ir.ui.view">
        <field name="name">workflow.job.inline.list</field>
        <field name="model">workflow.job</field>
        <field name="arch" type="xml">
            <tree string="Jobs">
                <field name="is_task" widget="boolean_toggle" readonly="1"/>
                <field name="codename" readonly="1"/>
                <field name="name" readonly="1"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_job_form" model="ir.ui.view">
        <field name="name">workflow.job.form</field>
        <field name="model">workflow.job</field>
        <field name="arch" type="xml">
            <form string="Job">
                <sheet>
                    <group>
                        <group>
                            <field name="id" invisible="1"/>
                            <field name="codename"/>
                            <field name="parent_id" domain="['&amp;', ('is_task', '=', False), ('id', '!=', id)]"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="is_task" widget="boolean_toggle"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.job.workflow_job_ids" name="Sub Jobs"
                              attrs="{'invisible':[('can_have_sub_jobs', '=', False)]}">
                            <field name="workflow_job_ids"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_job_inline_list', 'form_view_ref': 'nxd_workflow.view_workflow_job_inline_form', 'default_parent_id':id}"/>
                        </page>
                        <page id="workflow.job.workflow_procedure_execution_ids" name="Procedure Executions"
                              create="0" edit="0" delete="0" attrs="{'invisible':[('has_procedure_executions', '=', False)]}">
                            <field name="workflow_procedure_execution_ids" readonly="1"/>
                        </page>
                        <page id="workflow.job.workflow_process_execution_ids" name="Process Executions"
                              create="0" edit="0" delete="0" attrs="{'invisible':[('has_process_executions', '=', False)]}">
                            <field name="workflow_process_execution_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="can_have_sub_jobs" invisible="1"/>
                    <field name="has_procedure_executions" invisible="1"/>
                    <field name="has_process_executions" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_workflow_job_inline_form" model="ir.ui.view">
        <field name="name">workflow.job.inline.form</field>
        <field name="model">workflow.job</field>
        <field name="arch" type="xml">
            <form string="Job">
                <sheet>
                    <group>
                        <group>
                            <field name="codename"/>
                        </group>
                        <group>
                            <field name="name"/>
                            <field name="is_task" widget="boolean_toggle"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workflow_job_search" model="ir.ui.view">
        <field name="name">workflow.job.search</field>
        <field name="model">workflow.job</field>
        <field name="arch" type="xml">
            <search string="Jobs">
                <field name="codename" string="Codename"/>
                <field name="name" string="Name"/>
                <filter string="Job" name="job" domain="[('is_task', '=', False)]"/>
                <filter string="Task" name="task" domain="[('is_task', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Root Job" name="wkfjobrootjob" domain="" context="{'group_by':'root_workflow_job_id'}"/>
                    <filter string="Parent Job" name="wkfjobparentjob" domain="" context="{'group_by':'parent_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_workflow_job_kanban" model="ir.ui.view">
        <field name="name">workflow.job.kanban</field>
        <field name="model">workflow.job</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="codename" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="parent_id" readonly="1"/>
                <field name="is_task" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>(<span><field name="codename"/></span>)
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.parent_id.value">
                                    <span>Parent Job : </span>
                                    <field name="parent_id"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom mb-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span> Task ? </span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="is_task"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>