<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_process_list" model="ir.ui.view">
        <field name="name">workflow.process.list</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <tree string="Processes" create="0" edit="0">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="parent_id" optional="hide" readonly="1"/>
                <field name="codename" optional="hide" readonly="1"/>
                <field name="name"/>
                <field name="workflowable_id" readonly="1"/>
                <field name="base_process" widget="boolean_toggle" readonly="1"/>
                <field name="activity_process" widget="boolean_toggle" readonly="1"/>
                <field name="start_datetime" readonly="1"/>
                <field name="end_datetime" readonly="1"/>
            </tree>
        </field>
    </record>
    <record id="view_workflow_process_form" model="ir.ui.view">
        <field name="name">workflow.process.form</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <form string="Process">
                <sheet>
                    <div class="oe_button_box" name="button_box" position="inside">
                        <div class="o_field_widget o_stat_info">
                            <span class="o_stat_text">Time Unit : </span>
                            <span class="o_stat_value ">
                                <field name="time_unit"/>
                            </span>
                        </div>
                        <button name="action_remaining_procedures" type="object"
                                class="oe_stat_button" icon="fa-solid fa-hourglass-half"
                                string="Elapsed Time">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Elapsed Time</span>
                                <span class="o_stat_value ">
                                    <field name="elapsed_time" widget="statinfo" nolabel="1"/>
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('elapsed_time', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('elapsed_time', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" type="object" class="oe_stat_button"
                                icon="fa-solid fa-hourglass-end" string="Effective Duration"
                                attrs="{'invisible': ['|', ('duration_time', '&lt;=', 0), ('is_ended', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Effective Duration</span>
                                <span class="o_stat_value ">
                                    <field name="duration_time" widget="statinfo" nolabel="1" />
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('duration_time', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('duration_time', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" type="object" class="oe_stat_button"
                                icon="fa-solid fa-hourglass-start" string="Remaining Minimum Time"
                                attrs="{'invisible': [('remaining_min_duration', '&lt;=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Remaining Minimum Time</span>
                                <span class="o_stat_value ">
                                    <field name="remaining_min_duration" widget="statinfo" nolabel="1" />
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('remaining_min_duration', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('remaining_min_duration', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" type="object" class="oe_stat_button"
                                icon="fa-solid fa-hourglass-start" string="Remaining Maximum Time"
                                attrs="{'invisible': [('remaining_max_duration', '&lt;=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Remaining Maximum Time</span>
                                <span class="o_stat_value ">
                                    <field name="remaining_max_duration" widget="statinfo" nolabel="1" />
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('remaining_max_duration', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('remaining_max_duration', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" string="Exceeding Minimum Time"
                                type="object"  style="background-color:red !important;"
                                class="oe_stat_button" icon="fa-solid fa-clock-o"
                                attrs="{'invisible': [('exceeding_min_duration', '&lt;=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Exceeding Minimum Time</span>
                                <span class="o_stat_value ">
                                    <field name="exceeding_min_duration" widget="statinfo" nolabel="1"
                                           decoration-danger="exceeding_min_duration &gt; 0"/>
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('exceeding_min_duration', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('exceeding_min_duration', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" type="object" class="oe_stat_button"
                                icon="fa-solid fa-clock-o" string="Exceeding Maximum Time"
                                attrs="{'invisible': [('exceeding_max_duration', '&lt;=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Exceeding Maximum Time</span>
                                <span class="o_stat_value ">
                                    <field name="exceeding_max_duration" widget="statinfo" nolabel="1"
                                           decoration-danger="exceeding_max_duration &gt; 0"/>
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('exceeding_max_duration', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('exceeding_max_duration', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" type="object" class="oe_stat_button"
                                icon="fa-solid fa-clock-o" string="Exceeded Minimum Time"
                                attrs="{'invisible': [('exceeded_min_duration', '&lt;=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Exceeded Minimum Time</span>
                                <span class="o_stat_value ">
                                    <field name="exceeded_min_duration" widget="statinfo" nolabel="1"
                                           decoration-danger="exceeded_min_duration &gt; 0"/>
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('exceeded_min_duration', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('exceeded_min_duration', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_remaining_procedures" type="object" class="oe_stat_button"
                                icon="fa-solid fa-clock-o" string="Exceeded Maximum Time"
                                attrs="{'invisible': [('exceeded_max_duration', '&lt;=', 0)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Exceeded Maximum Time</span>
                                <span class="o_stat_value ">
                                    <field name="exceeded_max_duration" widget="statinfo" nolabel="1"
                                           decoration-danger="exceeded_max_duration &gt; 0"/>
                                    <span>&amp;nbsp;</span>
                                    <field name="time_label" nolabel="1" attrs="{'invisible': [('exceeded_max_duration', '&gt;', 1)]}"/>
                                    <field name="time_label_plural" nolabel="1" attrs="{'invisible': [('exceeded_max_duration', '&lt;=', 1)]}"/>
                                </span>
                            </div>
                        </button>
                        <button name="action_execution_status"
                                type="object" class="oe_stat_button"
                                icon="fa-solid fa-play-circle"
                                string="Tasks execution at Workflow Process Stage are awaiting"
                                attrs="{'invisible': [('is_execution_current', '=', True)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Execution Awaiting</span>
                            </div>
                        </button>
                        <button name="action_execution_status"
                                type="object" class="oe_stat_button"
                                icon="fa-solid fa-pause-circle"
                                string="Tasks Execution at Workflow Process Stage are in progress"
                                attrs="{'invisible': [('is_execution_current', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Execution In Progress</span>
                            </div>
                        </button>
                        <button name="action_execution_status"
                                type="object" class="oe_stat_button"
                                icon="fa-solid fa-check-circle"
                                string="Tasks Execution at Workflow Process Stage is completely executed"
                                attrs="{'invisible': [('is_execution_complete', '=', False)]}">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">Execution Complete</span>
                            </div>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="codename" readonly="1"/>
                            <field name="base_process" widget="boolean_toggle" readonly="1"/>
                            <field name="start_datetime" readonly="1"/>
                            <field name="expected_min_start_datetime" readonly="1"
                                   attrs="{'invisible':  [('expected_min_start_datetime', '=', False)]}"/>
                            <field name="expected_max_start_datetime" readonly="1"
                                   attrs="{'invisible':  [('expected_max_start_datetime', '=', False)]}"/>
                            <field name="workflow_procedure_id" readonly="1"/>
                            <field name="root_workflow_process_id" readonly="1"/>
                            <field name="starter_workflow_process_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="activity_process" widget="boolean_toggle" readonly="1"/>
                            <field name="end_datetime" readonly="1"
                                   attrs="{'invisible':  [('end_datetime', '=', False)]}"/>
                            <field name="expected_min_end_datetime" readonly="1"
                                   attrs="{'invisible':  [('expected_min_end_datetime', '=', False)]}"/>
                            <field name="expected_max_end_datetime" readonly="1"
                                   attrs="{'invisible':  [('expected_max_end_datetime', '=', False)]}"/>
                            <field name="parent_id" readonly="1"
                                   attrs="{'invisible':  [('parent_id', '=', False)]}"/>
                            <field name="workflowable_id" readonly="1"/>
                            <field name="workflow_process_stage_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page id="workflow.process.workflow_process_ids" name="Sub Processes"
                              attrs="{'invisible': [('has_sub_processes', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="workflow_process_ids" readonly="1"
                                   context="{'tree_view_ref': 'nxd_workflow.view_workflow_process_list', 'default_parent_id':id}"/>
                        </page>
                        <page id="workflow.process.workflow_process_transition_ids" name="Sub Process Transitions"
                              attrs="{'invisible': [('has_sub_process_transitions', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="workflow_process_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.workflow_process_duration_ids" name="Durations"
                              attrs="{'invisible': [('has_durations', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="workflow_process_duration_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.workflow_process_stage_ids" name="Process Stages"
                              attrs="{'invisible': [('has_process_stages', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="workflow_process_stage_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.workflow_process_stage_transition_ids" name="Process Stage Transitions"
                              attrs="{'invisible': [('has_process_stage_transitions', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="workflow_process_stage_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.inbound_workflow_process_transition_ids" name="Inbound Transitions"
                              attrs="{'invisible': [('has_inbound_transitions', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="inbound_workflow_process_transition_ids" readonly="1"/>
                        </page>
                        <page id="workflow.process.outbound_workflow_process_transition_ids" name="Outbound Transitions"
                              attrs="{'invisible': [('has_outbound_transitions', '=', False)]}" create="0" edit="0" delete="0">
                            <field name="outbound_workflow_process_transition_ids" readonly="1"/>
                        </page>
                    </notebook>
                    <field name="parent_allowed" invisible="1"/>
                    <field name="has_sub_processes" invisible="1"/>
                    <field name="has_durations" invisible="1"/>
                    <field name="has_sub_process_transitions" invisible="1"/>
                    <field name="has_process_stages" invisible="1"/>
                    <field name="has_process_stage_transitions" invisible="1"/>
                    <field name="has_inbound_transitions" invisible="1"/>
                    <field name="has_outbound_transitions" invisible="1"/>
                    <field name="is_ended" invisible="1"/>
                    <field name="is_execution_started" invisible="1"/>
                    <field name="is_execution_current" invisible="1"/>
                    <field name="is_execution_complete" invisible="1"/>
                </sheet>
            </form>
        </field>
    </record>
    <record id="workflow_process_search" model="ir.ui.view">
        <field name="name">workflow.process.search</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <search string="Processes">
                <field name="codename" string="Codename"/>
                <field name="name" string="Name"/>
                <filter string="Base" name="base" domain="[('base_process', '=', True)]"/>
                <filter string="Sub Process" name="sub_process"
                        domain="['&amp;', ('base_process', '=', False), ('activity_process', '=', False)]"/>
                <filter string="Activity" name="activity" domain="[('activity_process', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Workflowable" name="wkfwblewkfprocss" domain="" context="{'group_by':'workflowable_id'}"/>
                    <filter string="Root Process" name="wkfrootwkfprocss" domain="" context="{'group_by':'root_workflow_process_id'}"/>
                    <filter string="Parent Process" name="wkfparentwkfprocss" domain="" context="{'group_by':'parent_id'}"/>
                    <filter string="Procedure" name="wkfprocedwkfprocss" domain="" context="{'group_by':'workflow_procedure_id'}"/>
                    <filter string="Starter Sub Process" name="wkfsubprocsswkfprocss" domain="" context="{'group_by':'starter_workflow_process_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_workflow_process_kanban" model="ir.ui.view">
        <field name="name">workflow.process.kanban</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <kanban class="oe_background_grey o_kanban_dashboard">
                <field name="company_id" optional="hide" readonly="1"/>
                <field name="root_workflow_process_id" optional="hide" readonly="1"/>
                <field name="workflow_procedure_id" optional="hide" readonly="1"/>
                <field name="workflowable_id" optional="hide" readonly="1"/>
                <field name="parent_id" optional="hide" readonly="1"/>
                <field name="starter_workflow_process_id" optional="hide" readonly="1"/>
                <field name="workflow_process_stage_id" optional="hide" readonly="1"/>
                <field name="base_process" widget="boolean_toggle" readonly="1"/>
                <field name="activity_process" widget="boolean_toggle" readonly="1"/>
                <field name="codename" readonly="1"/>
                <field name="name" readonly="1"/>
                <field name="start_datetime" readonly="1"/>
                <field name="cancelled" widget="boolean_toggle" readonly="1"/>
                <field name="breaked" widget="boolean_toggle" readonly="1"/>
                <field name="can_be_resumed" widget="boolean_toggle" readonly="1"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_header">
                                <h4 class="o_primary">
                                    <span><field name="name"/></span>(<span><field name="codename"/></span>)
                                </h4>
                            </div>
                            <div class="oe_kanban_content mb-2">
                                <div t-if="record.workflow_procedure_id.value">
                                    <span>Procedure : </span>
                                    <field name="workflow_procedure_id"/>
                                </div>
                                <div t-if="record.workflowable_id.value">
                                    <span>Object : </span>
                                    <field name="workflowable_id"/>
                                </div>
                                <div t-if="record.starter_workflow_process_id.value">
                                    <span>Starter Process : </span>
                                    <field name="starter_workflow_process_id"/>
                                </div>
                                <div t-if="record.workflow_process_stage_id.value">
                                    <span>Starter Stage : </span>
                                    <field name="workflow_process_stage_id"/>
                                </div>
                                <div t-if="record.start_datetime.value">
                                    <span>Start Datetime : </span>
                                    <field name="start_datetime"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom mb-2">
                                    <div class="oe_kanban_bottom_left">
                                        <span> Base ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="base_process"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                        <span> Activity ?</span>
                                        <span class="o_kanban_record_subtitle">
                                            <field name="activity_process"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                    <div class="oe_kanban_bottom_right">
                                        <span> Cancelled ? </span>
                                        <span class="o_kanban_record_subtitle ms-2">
                                            <field name="cancelled"
                                                   readonly="1"
                                                   widget="boolean_toggle"/>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_workflow_process_calendar" model="ir.ui.view">
        <field name="name">workflow.process.calendar</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <calendar date_stop="start_datetime" date_start="end_datetime" string="Processes" delete="0" create="0">
                <field name="workflowable_id"/>
            </calendar>
        </field>
    </record>

    <record id="view_workflow_process_pivot" model="ir.ui.view">
        <field name="name">workflow.process.pivot</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <pivot string="Processes Analysis" sample="1">
                <field name="workflowable_id" type="col"/>
                <field name="start_datetime" interval="day" type="row"/>
            </pivot>
        </field>
    </record>

    <record id="view_workflow_process_graph" model="ir.ui.view">
        <field name="name">workflow.process.graph</field>
        <field name="model">workflow.process</field>
        <field name="arch" type="xml">
            <graph string="Processes Analysis" sample="1">
                <field name="workflowable_id"/>
                <field name="start_datetime" interval="month"/>
            </graph>
        </field>
    </record>
</odoo>