<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_workflow_procedure_execution_duration_wizard" model="ir.ui.view">
        <field name="name">configure_workflow.procedure.execution.duration.wizard</field>
        <field name="model">workflow.procedure.execution.duration.wizard</field>
        <field name="arch" type="xml">
            <form string="Configure Procedure Execution Duration">
                <sheet>
                    <group>
                        <group>
                            <field name="workflow_procedure_execution_id" readonly="1"/>
                            <field name="min_duration"/>
                        </group>
                        <group>
                            <field name="time_unit"/>
                            <field name="max_duration"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="create_procedure_execution_duration_from_wizard" class="btn btn-primary"
                            string="SAVE"/>
                    <button string="CANCEL" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>